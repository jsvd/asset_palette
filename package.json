{
  "name": "asset-palace",
  "version": "0.1.0",
  "description": "LLM-accessible catalog of CC0 game assets with sprite atlas definitions",
  "type": "module",
  "scripts": {
    "verify": "tsx scripts/verify-pack.ts",
    "verify:all": "tsx scripts/verify-pack.ts sprites/**/*.json",
    "validate:schema": "ajv validate -s schema/sprite-pack.schema.json -d"
  },
  "devDependencies": {
    "ajv-cli": "^5.0.0",
    "sharp": "^0.33.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "license": "CC0-1.0"
}
