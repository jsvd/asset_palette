{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://asset-palace.dev/schema/sprite-pack.schema.json",
  "title": "Sprite Pack Definition",
  "description": "Machine-readable definition of a CC0 sprite asset pack",
  "type": "object",
  "required": ["id", "name", "source", "license", "downloadUrl", "sprites"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier (kebab-case)"
    },
    "name": {
      "type": "string",
      "description": "Human-readable pack name"
    },
    "source": {
      "type": "string",
      "enum": ["kenney", "opengameart", "itch", "custom"],
      "description": "Asset source/creator"
    },
    "license": {
      "type": "string",
      "const": "CC0",
      "description": "License (must be CC0)"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "URL to the asset pack page"
    },
    "downloadUrl": {
      "type": "string",
      "format": "uri",
      "description": "Direct download URL (usually a .zip)"
    },
    "tileSize": {
      "type": "integer",
      "minimum": 1,
      "description": "Default tile/sprite size in pixels (assumes square)"
    },
    "primarySheet": {
      "type": "string",
      "description": "Path to the main sprite sheet within the pack"
    },
    "sprites": {
      "type": "object",
      "description": "Named sprite definitions",
      "additionalProperties": {
        "$ref": "#/$defs/spriteDef"
      }
    },
    "tags": {
      "type": "object",
      "description": "Categorization of sprites by type",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional pack metadata",
      "properties": {
        "author": { "type": "string" },
        "version": { "type": "string" },
        "description": { "type": "string" },
        "totalAssets": { "type": "integer" }
      }
    }
  },
  "$defs": {
    "spriteDef": {
      "oneOf": [
        { "$ref": "#/$defs/staticSprite" },
        { "$ref": "#/$defs/animatedSprite" }
      ]
    },
    "staticSprite": {
      "type": "object",
      "description": "A single static sprite",
      "required": ["x", "y"],
      "properties": {
        "file": {
          "type": "string",
          "description": "Sprite sheet file (if different from primarySheet)"
        },
        "x": {
          "type": "integer",
          "minimum": 0,
          "description": "X position in pixels"
        },
        "y": {
          "type": "integer",
          "minimum": 0,
          "description": "Y position in pixels"
        },
        "w": {
          "type": "integer",
          "minimum": 1,
          "description": "Width (defaults to tileSize)"
        },
        "h": {
          "type": "integer",
          "minimum": 1,
          "description": "Height (defaults to tileSize)"
        }
      },
      "additionalProperties": false
    },
    "animatedSprite": {
      "type": "object",
      "description": "An animated sprite with multiple frames",
      "required": ["frames"],
      "properties": {
        "file": {
          "type": "string",
          "description": "Sprite sheet file (if different from primarySheet)"
        },
        "frames": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["x", "y"],
            "properties": {
              "x": { "type": "integer", "minimum": 0 },
              "y": { "type": "integer", "minimum": 0 },
              "w": { "type": "integer", "minimum": 1 },
              "h": { "type": "integer", "minimum": 1 }
            }
          },
          "minItems": 1,
          "description": "Array of frame positions"
        },
        "fps": {
          "type": "number",
          "minimum": 0.1,
          "description": "Frames per second"
        },
        "loop": {
          "type": "boolean",
          "default": true,
          "description": "Whether animation loops"
        }
      },
      "additionalProperties": false
    }
  }
}
