{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://asset-palace.dev/schema/sound-pack.schema.json",
  "title": "Sound Pack Definition",
  "description": "Machine-readable definition of a CC0 sound/audio asset pack",
  "type": "object",
  "required": ["id", "name", "source", "license", "downloadUrl", "sounds"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier (kebab-case)"
    },
    "name": {
      "type": "string",
      "description": "Human-readable pack name"
    },
    "source": {
      "type": "string",
      "enum": ["kenney", "opengameart", "itch", "custom"],
      "description": "Asset source/creator"
    },
    "license": {
      "type": "string",
      "const": "CC0",
      "description": "License (must be CC0)"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "URL to the asset pack page"
    },
    "downloadUrl": {
      "type": "string",
      "format": "uri",
      "description": "Direct download URL (usually a .zip)"
    },
    "sounds": {
      "type": "object",
      "description": "Named sound definitions",
      "additionalProperties": {
        "$ref": "#/$defs/soundDef"
      }
    },
    "tags": {
      "type": "object",
      "description": "Categorization of sounds by use case",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional pack metadata",
      "properties": {
        "author": { "type": "string" },
        "version": { "type": "string" },
        "description": { "type": "string" },
        "totalSounds": { "type": "integer" }
      }
    }
  },
  "$defs": {
    "soundDef": {
      "type": "object",
      "description": "A single sound file definition",
      "required": ["file"],
      "properties": {
        "file": {
          "type": "string",
          "description": "Path to the sound file within the pack"
        },
        "duration": {
          "type": "number",
          "minimum": 0,
          "description": "Duration in seconds (if known)"
        },
        "loopable": {
          "type": "boolean",
          "default": false,
          "description": "Whether the sound is designed to loop"
        },
        "category": {
          "type": "string",
          "enum": ["sfx", "music", "ambient", "voice"],
          "description": "Sound category"
        }
      },
      "additionalProperties": false
    }
  }
}
